    {
      inputField  : "${tr.fV($property.name)}",         // ID of the input field
      ifFormat    : "%Y-%m-%d",    // the date format
      showsTime      :    false,
      timeFormat     :    "24",
      button      : "${tr.fV($property.name)}Button"       // ID of the button
    }
